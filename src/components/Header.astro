<header
	class="px-4 lg:px-6 h-16 flex items-center justify-between bg-secondary-color text-black"
>
	<a class="flex items-center justify-center logo" href="#">
		<Image src={Logo} alt="Toolbox24 Logo" height="32" loading="eager" />
	</a>
	<nav class="ml-auto hidden md:flex gap-4 sm:gap-6">
		<a
			class="text-sm font-medium hover:text-[#fdd500] transition-colors"
			href="#kontakt">Standort</a
		>
		<a
			class="text-sm font-medium hover:text-[#fdd500] transition-colors"
			href="https://toolbox24.mysharefox.com/help?header=4">Kontakt</a
		>
	</nav>
	<button class="btn ml-4 md:hidden" aria-label="Menü umschalten">
		<Icon class="h-6 w-6" name="ion:menu" />
	</button>
</header>

<style>
	.logo {
		display: flex;
		align-items: center;
		gap: 0.5rem;
		& span {
			font-size: 1.5rem;
			color: #030303;
			font-style: italic;
		}
		& .reg-span {
			font-weight: 400;
		}
	}
</style>
